
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <title>Resposta 6</title>
    <meta charset="utf-8">
</head>
<style>
    canvas {
        background-color: rgba(109, 79, 245, 0.626);
        border: 3px solid rgb(38, 0, 255);
    }
</style>

<body>
    <canvas width="600" height="400"></canvas>
    <script>

        const TcCima = 38, TcBaixo = 40, TcEsquerda = 37, TcDireita = 39;
        var MovEsq = MovDir = MovCima = MovBaixo = false;
        const radius = 20,Speed = 10;
        var canvas = document.querySelector("canvas");
        var contexto = canvas.getContext("2d");
        let ponto = {
            x: 280,
            y: 200
        };

        atualizacao();

        window.addEventListener("keydown", teclapressionada);

        function teclapressionada(entrada) {
            let chave = entrada.keyCode;

            if (chave === TcEsquerda && chave !== TcDireita) {
                MovEsq = true;
            }
            if (chave === TcDireita && chave !== TcEsquerda) {
               MovDir = true;
            }
            if (chave ===TcCima && chave !== TcBaixo) {
               MovCima = true;
            }
            if (chave === TcBaixo && chave !==TcCima) {
               MovBaixo = true;
            }
        }

        window.addEventListener("keyup", teclaliberada);

        function teclaliberada(entrada) {
            let chave = entrada.keyCode;

            if (chave === TcEsquerda && chave !== TcDireita) {
                MovEsq = false;
            }
            if (chave === TcDireita && chave !== TcEsquerda) {
               MovDir = false;
            }
            if (chave ===TcCima && chave !== TcBaixo) {
               MovCima = false;
            }
            if (chave === TcBaixo && chave !==TcCima) {
               MovBaixo = false;
            }
        }

        function Movimento() {
            if (MovEsq) {
                ponto.x -=Speed;
            }
            if (MovDir) {
                ponto.x +=Speed;
            }
            if (MovCima) {
                ponto.y -=Speed;
            }
            if (MovBaixo) {
                ponto.y +=Speed;
            }
        }

        function render() {
            contexto.clearRect(0, 0, canvas.width, canvas.height);
            ponto.x = Math.max(radius, Math.min(canvas.width - radius, ponto.x));
            ponto.y = Math.max(radius, Math.min(canvas.height - radius, ponto.y));

            contexto.beginPath();
            contexto.arc(ponto.x, ponto.y, radius, 0, 2 * Math.PI,)
            contexto.fill();
        }

        function atualizacao() {
            requestAnimationFrame(atualizacao, canvas);
            render();
            Movimento();

        }
    </script>
</body>

</html>
